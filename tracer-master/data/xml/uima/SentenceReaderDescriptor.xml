<?xml version="1.0" encoding="UTF-8"?>
<collectionReaderDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <implementationName>de.uni_leipzig.asv.medusa.uima.reader.SentenceReader</implementationName>
  <processingResourceMetaData>
    <name>SentenceReaderDescriptor</name>
    <description>A SentenceReader reads Sentences from a text file and populates for each sentence a CAS. The text file has to contain 4 columns which are separated by TAB-characters.
The columns are &lt;Sentence-ID&gt;TAB&lt;Sentence&gt;TAB&lt;Timestamp&gt;TAB&lt;Source&gt;. The additional information is stored as an Annotation of the type SentenceInformation.

There are two parameters : the name of the input file and it's character encoding.</description>
    <version>1.0</version>
    <vendor/>
    <configurationParameters>
      <configurationParameter>
        <name>Encoding</name>
        <description>Encoding used in the source-file, UTF-8 for example</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>InputFile</name>
        <description>The location of the Source-File</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
    </configurationParameters>
    <configurationParameterSettings/>
    <typeSystemDescription>
      <imports>
        <import location="file:SentenceInformationTypeDescriptor.xml"/>
      </imports>
    </typeSystemDescription>
    <typePriorities/>
    <fsIndexCollection/>
    <capabilities>
      <capability>
        <inputs/>
        <outputs>
          <type allAnnotatorFeatures="true">de.uni_leipzig.asv.medusa.uima.types.SentenceInformation</type>
        </outputs>
        <languagesSupported/>
      </capability>
    </capabilities>
    <operationalProperties>
      <modifiesCas>true</modifiesCas>
      <multipleDeploymentAllowed>false</multipleDeploymentAllowed>
      <outputsNewCASes>true</outputsNewCASes>
    </operationalProperties>
  </processingResourceMetaData>
  <resourceManagerConfiguration/>
</collectionReaderDescription>
